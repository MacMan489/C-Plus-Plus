int main()

{

    //declare the two numbers p and q

    //declare variable qt for division

    int p, q, qt;

    //get two numbers

    cout<<"Enter two numbers: ";

    cin>>p>>q;

    //find the real division

    qt=p/q;

    cout<<"Division is: "<<qt;

    return 0;

}

6.

Remainder of 2 integers:

#include<iostream>

using namespace std;

int main()

{

    //declare the two numbers p and q

    //declare variable rem for remainder

    int p, q, rem;

    //get two numbers

    cout<<"Enter two numbers: ";

    cin>>p>>q;

    //find the remainder

    rem=p%q;

    cout<<"Remainder is: "<<rem;

    return 0;

}

